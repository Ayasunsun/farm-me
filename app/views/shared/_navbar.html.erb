<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <ul class="navbar-nav mr-auto">
    <li class="nav-item">
      <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "icon.png" %>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to "All Baskets", baskets_path, class: "nav-link mt-1"  %>
    </li>
  </ul>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="row align-items-end navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "New Basket", new_basket_path, class: "nav-link"  %>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item dropdown">
        <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, width: 100, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <%= image_tag "avatar.jpg", width: 100, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My Page", dashboard_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
    <% else %>
    <li class="nav-item">
      <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Sign in", user_session_path, class: "nav-link" %>
    </li>
    <% end %>
  </ul>
</div>
</div>



