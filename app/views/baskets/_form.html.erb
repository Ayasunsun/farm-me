<%= simple_form_for(@basket) do |f| %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price, input_html: { step: 100 }%>

  <table class='table'>
    <thead>
      <tr>
        <th></th>
        <th>Product</th>
        <th>Quantity</th>
      </tr>
    </thead>
    <tbody class='fields'>
      <%= f.fields_for :basket_items do |builder| %>
        <%= render 'basket_item', f: builder %>
      <% end %>
    </tbody>
  </table>

  <div class="form-actions">
    <%= f.submit 'Unleash your Basket' %>
    <%= link_to_add_row('Add item', f, :basket_items, class: 'btn btn-primary') %>
  </div>

<% end %>
