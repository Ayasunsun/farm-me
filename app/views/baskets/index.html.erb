<div class="container p-5 mb-5 mt-5" style="background-color: #afcea4; opacity: 0.95;">
  <h1 class="text-center mb-3">All Our Baskets (<%= @baskets.count %>) </h1>
  <div class="basket-cards-all">
    <% @baskets.each do |basket| %>
    <div class="card-basket mr-1" style="background-color: white;">
      <% if basket.photos.attached? %>
      <%=cl_image_tag basket.photos.first.key, alt: "alttext", height: 240, width: 286, crop: :fill, class: 'p-1' %>
      <% else %>
      <%= image_tag "empyt-basket.jpg", alt: "alttext", height: 240, width: 286, crop: :fill, class: 'p-1 ml-2' %>
      <% end %>
      <div class="basket-info p-1 text-center">
        <h5><%= basket.title %></h5>
        <div class="d-flex justify-content-between pr-2 pl-2">
          <p><%= link_to 'Details', basket_path(basket), class: 'btn btn-success'  %></p>
          <p><strong>Â¥ <%= basket.price %></strong></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>

<%= form_tag baskets_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a basket"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

</div>
